<h2><%= author.name %></h2>
<a href="/authors/<%= author.id %>/edit">Edit</a>
<%- include('../partials/deleteForm', { url: `/authors/${author.id}/delete`}) %>

<% if(books.length > 0){ %>
<% books.forEach(book => { %>
<a href="/books/<%= book.id %>">
    <href></href>
    <img height="150" width="100" src="<%= book.sendCoverPath %>">
</a>
<% }); %>
<% } %>