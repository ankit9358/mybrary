<br>
<div align="center">
    <h2 class="display-4"><%= author.name %></h2>
    <div class="row">
        <div class="col-6">
            <a style="float: right;" href="/authors/<%= author.id %>/edit"><button class="btn btn-primary">Edit</button></a>
        </div>
        <div class="col-6">
            <%- include('../partials/deleteForm', { url: `/authors/${author.id}/delete`}) %>
            
        </div>
    </div>


</div>
<br>


<% if(books.length > 0){ %>
<% books.forEach(book => { %>
<div class="container fix-img">
    <div class="box zoom">
        <a href="/books/<%= book.id %>"><img height="250" width="210" src="<%= book.sendCoverPath %>"></a>

    </div>
</div>
<% }); %>
<% } %>